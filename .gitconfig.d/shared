[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff --color
  lg = log -p
  lp = log --oneline --graph --color
  dfw = diff --word-diff=color
  pfwl = push --set-upstream --force-with-lease --force-if-includes origin HEAD
  pwfl = push --set-upstream --force-with-lease --force-if-includes origin HEAD
  pwlf = push --set-upstream --force-with-lease --force-if-includes origin HEAD
[color]
  status = true
  diff = true
  ui = true
[core]
  pager = "less -F -X"
  editor = /usr/bin/vim
  preloadindex = true
  excludesfile = ~/.gitconfig.d/gitignore
[merge]
  tool = /usr/bin/vimdiff
[push]
  default = simple
