#!/bin/bash

# Update yadm-managed dotfiles
# This script performs a complete update of dotfiles including:
# 1. Pulling latest changes from the remote repository
# 2. Syncing and updating all submodules
# 3. Running the bootstrap script to apply configuration changes

set -e

echo "Updating yadm dotfiles..."
echo ""

echo "1. Pulling latest changes..."
yadm pull

echo ""
echo "2. Refreshing submodules..."
yadm refresh

echo ""
echo "3. Running bootstrap..."
yadm bootstrap

echo ""
echo "âœ… Update complete!"
